<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_5dp"
    android:background="@color/white"
    android:id="@+id/home_deal_chance_rl"
    android:orientation="vertical">


    <!--<View-->
    <!--android:id="@+id/view_devider"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/margin_12dp"-->
    <!--android:background="@color/color_common_bg" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp">

        <TextView
            android:id="@+id/tv_homeinformation_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="美元日元"
            android:textColor="@color/app_common_content"
            android:textSize="@dimen/text_size_15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_homeinformation_abstract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_toRightOf="@id/tv_homeinformation_product"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="看多"
            android:textColor="@color/trade_up"
            android:textSize="@dimen/text_size_15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2016-05-05"
            android:textColor="@color/text_color_gray"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="@dimen/margin_57dp"
            android:layout_height="@dimen/margin_20dp"
            android:background="@drawable/home_information_typebg"
            android:gravity="center"
            android:text="@string/home_information_type4"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center|left"
            android:text="澳大利亚贸易帐超预期，澳元能否绝地反击走出颓势"
            android:textColor="@color/app_common_content"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:gravity="center|left"
            android:text="建议："
            android:textColor="@color/app_common_content"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/tv_suggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center|left"
            android:text="0.7650 附近大概率看多！目标0.7720，止损30%"
            android:textColor="@color/app_common_content"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center|right"
            android:text="09:56"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tv_homeinformation_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="分析师"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_12sp" />/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/color_common_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_homeinformation_tradeup"
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center|left"
            android:text=""
            android:textColor="@color/trade_up"
            android:textSize="@dimen/text_size_12sp" />

        <View
            android:layout_width="@dimen/margin_10dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_homeinformation_tradeup"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_3dp"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:background="@drawable/img_homeinformation_tradeup" />

        <ImageView
            android:id="@+id/iv_homeinformation_tradedown"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-1dp"
            android:layout_weight="1.0"
            android:background="@drawable/img_homeinformation_tradedown" />

        <View
            android:layout_width="@dimen/margin_10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_homeinformation_tradedown"
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_10dp"
            android:gravity="center|right"
            android:text=""
            android:textColor="@color/trade_down"
            android:textSize="@dimen/text_size_12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_20dp"
        android:background="@color/bg_gray" />
</LinearLayout>