<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleHit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="0dip"
        android:layout_marginTop="30dip"
        android:gravity="center"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:text="@string/token_title_disable"
        android:textColor="@color/app_common_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/titleMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:lineSpacingExtra="8dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="@string/token_msg_disable"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/dialog_login_cancle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dip"
            android:layout_weight="1"
            android:background="@drawable/dialog_login_submit"
            android:gravity="center"
            android:text="@string/token_btn_disable"
            android:textColor="@color/common_blue"
            android:textSize="@dimen/text_size_15sp" />
    </LinearLayout>
</LinearLayout>