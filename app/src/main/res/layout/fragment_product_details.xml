<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.moyacs.canary.product2.ProductDetailsFragment2">

    <LinearLayout
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.moyacs.canary.widget.UnderLineTextView
            android:id="@+id/tab1_SMA"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SMA"
            android:textColor="@color/normal_grey_selected_white"
            android:textSize="@dimen/text_size_17sp"
            app:isLineEnable="false"
            app:lineColor="@color/under_line"
            app:mlineHeight="3dip"
            app:mlineWidth="0dip"
            app:upOrunder="under" />

        <com.moyacs.canary.widget.UnderLineTextView
            android:id="@+id/tab2_EMA"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="EMA"
            android:textColor="@color/normal_grey_selected_white"
            android:textSize="@dimen/text_size_17sp"
            app:isLineEnable="false"
            app:lineColor="@color/under_line"
            app:mlineHeight="3dip"
            app:mlineWidth="0dip"
            app:upOrunder="under" />
        <com.moyacs.canary.widget.UnderLineTextView
            android:id="@+id/tab3_BOLL"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BOLL"
            android:textColor="@color/normal_grey_selected_white"
            android:textSize="@dimen/text_size_17sp"
            app:isLineEnable="false"
            app:lineColor="@color/under_line"
            app:mlineHeight="3dip"
            app:mlineWidth="0dip"
            app:upOrunder="under" />
    </LinearLayout>
    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/combinedchart_1"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.moyacs.canary.widget.UnderLineTextView
            android:id="@+id/tab1_MACD"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SMA"
            android:textColor="@color/normal_grey_selected_white"
            android:textSize="@dimen/text_size_17sp"
            app:isLineEnable="false"
            app:lineColor="@color/under_line"
            app:mlineHeight="3dip"
            app:mlineWidth="0dip"
            app:upOrunder="under" />

        <com.moyacs.canary.widget.UnderLineTextView
            android:id="@+id/tab2_KDJ"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="EMA"
            android:textColor="@color/normal_grey_selected_white"
            android:textSize="@dimen/text_size_17sp"
            app:isLineEnable="false"
            app:lineColor="@color/under_line"
            app:mlineHeight="3dip"
            app:mlineWidth="0dip"
            app:upOrunder="under" />
        <com.moyacs.canary.widget.UnderLineTextView
            android:id="@+id/tab3_RSI"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BOLL"
            android:textColor="@color/normal_grey_selected_white"
            android:textSize="@dimen/text_size_17sp"
            app:isLineEnable="false"
            app:lineColor="@color/under_line"
            app:mlineHeight="3dip"
            app:mlineWidth="0dip"
            app:upOrunder="under" />
    </LinearLayout>
    <View
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>
