<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.moyacs.canary.widget.UnderLineTextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_36dp"
        android:gravity="center"
        android:minWidth="56dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textColor="@color/normal_grey_selected_white"
        android:textSize="@dimen/text_size_15sp"
        app:isLineEnable="true"
        app:isLineEnableWhileSelected="true"
        app:lineColor="@color/app_common_selected"
        app:mlineHeight="3dip"
        app:upOrunder="under" />
</LinearLayout>

