<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提取金额"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:text="(  "
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/text_quanbutixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部提现"
                android:textColor="@color/trade_money_btn_cz"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  )"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="0dip"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_lable"
                android:textColor="@color/app_common_content"
                android:textSize="32sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/ed_inputMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@null"
                android:hint="@string/cash_out_input_money"
                android:inputType="numberDecimal"
                android:paddingLeft="2dip"
                android:textColor="@color/app_common_content"
                android:textColorHint="@color/grey_40"
                android:textSize="17sp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/margin_0.5dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:background="@color/grey_30" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_daozhangshijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="到账时间："
                android:textColor="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_daozhangshijian"
                android:text="1~2个工作日"
                android:textColor="@color/app_common_content" />

            <ImageView
                android:id="@+id/image_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/img_product_qa" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/margin_10dp"
            android:background="@color/grey_10" />

        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="卡号"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_15sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/ed_inputBankNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入卡号"
                android:inputType="numberDecimal"
                android:paddingLeft="2dip"
                android:textColor="@color/app_common_content"
                android:textColorHint="@color/grey_40"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/grey_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="户名"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_15sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/ed_inputUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入用户名"
                android:paddingLeft="2dip"
                android:textColor="@color/app_common_content"
                android:textColorHint="@color/grey_40"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/grey_30" />

        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/rl_selectBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dip"
                android:layout_marginTop="0dip"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="选择银行"
                    android:textColor="@color/app_common_content"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_selectBank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:paddingRight="30dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="请点击选择银行"
                    android:paddingLeft="2dip"
                    android:textColor="@color/app_common_content"
                    android:textColorHint="@color/grey_40"
                    android:textSize="15sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/home_more_arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@color/grey_10" />

        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/rl_selectAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dip"
                android:layout_marginTop="0dip"

                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="地区"
                    android:textColor="@color/app_common_content"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_selectAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:paddingRight="30dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="请点击选择地区"
                    android:paddingLeft="2dip"
                    android:textColor="@color/app_common_content"
                    android:textColorHint="@color/grey_40"
                    android:textSize="15sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/home_more_arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/grey_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginTop="10dip"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="银行支行"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_15sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/ed_bankBranch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入支行"
                android:paddingLeft="2dip"
                android:textColor="@color/app_common_content"
                android:textColorHint="@color/grey_40"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/grey_30" />

    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"/>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:layout_above="@id/view"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:background="@drawable/trade_money_btn_cz"
        android:text="提交"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/text_size_15sp"
        android:visibility="visible" />
</RelativeLayout>
