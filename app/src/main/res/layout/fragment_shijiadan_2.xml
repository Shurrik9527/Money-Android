<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_15dp">

                <RelativeLayout
                    android:id="@+id/upView"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/create_tab_up"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textUpView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="买涨"
                        android:textColor="@color/normal_black_selected_white"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:id="@+id/tv_price_buy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textUpView"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/normal_black_selected_white"
                        android:textSize="@dimen/text_size_13sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/downView"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/create_tab_down"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textDownView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="买跌"
                        android:textColor="@color/normal_black_selected_white"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:id="@+id/tv_price_sell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textDownView"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/normal_black_selected_white"
                        android:textSize="@dimen/text_size_13sp" />

                </RelativeLayout>
            </LinearLayout>
            <!--建仓手数布局-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dip">

                <TextView
                    android:layout_width="@dimen/t_create_left"
                    android:layout_height="36dip"
                    android:layout_marginRight="10dip"
                    android:gravity="center_vertical"
                    android:text="@string/t_create_num"
                    android:textColor="@color/app_common_content"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/numRView"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/lessnumView"
                        android:layout_width="40dip"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/lessnumImg"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/minus_selected" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/ed_num"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-0.5dip"
                        android:layout_marginRight="-0.5dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:maxLines="1"
                        android:selectAllOnFocus="false"
                        android:textColor="@color/app_common_content"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/text_size_17sp"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:id="@+id/addnumView"
                        android:layout_width="40dip"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/addnumImg"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/add_selected" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <TextView
                    android:layout_width="@dimen/t_create_left"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:gravity="center_vertical"
                    android:text="@string/t_create_num"
                    android:textColor="@color/app_common_content"
                    android:textSize="11sp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_numhint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="   最小手数为 0.01 最大手数为 20.00"
                        android:textColor="@color/dlg_c_hint"
                        android:textSize="@dimen/text_size_11sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_24dp"
                android:background="@color/sub_bg" />
            <!--止损 止盈布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip">

                    <LinearLayout
                        android:id="@+id/lossViewLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:gravity="center"
                        android:minWidth="@dimen/t_create_left"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/checkLoss"
                            android:layout_width="23dip"
                            android:layout_height="23dip"
                            android:gravity="center_vertical"
                            android:src="@drawable/t_select_bg"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingLeft="@dimen/margin_10dp"
                            android:text="@string/loss_point"
                            android:textColor="@color/t_selected_color"
                            android:textSize="@dimen/text_size_14sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lossViewRight"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/lessLossView"
                            android:layout_width="40dip"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/lessLossImg"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/t_img_less_bg" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/ed_loss"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-0.5dip"
                            android:layout_marginRight="-0.5dip"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="@string/set_loss_point"
                            android:inputType="numberDecimal"
                            android:textColor="@color/app_common_content"
                            android:textColorHint="@color/t_ed_hint"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="@dimen/text_size_15sp"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:id="@+id/addLossView"
                            android:layout_width="40dip"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/addLossImg"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/t_img_add_bg" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:gravity="center"
                        android:minWidth="@dimen/t_create_left"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_lossHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip"
                        android:gravity="center|left"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dip"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip">

                    <LinearLayout
                        android:id="@+id/profitViewLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:gravity="center"
                        android:minWidth="@dimen/t_create_left"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/checkPorfit"
                            android:layout_width="23dip"
                            android:layout_height="23dip"
                            android:gravity="center_vertical"
                            android:src="@drawable/t_select_bg"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingLeft="@dimen/margin_10dp"
                            android:text="@string/profit_point"
                            android:textColor="@color/t_selected_color"
                            android:textSize="@dimen/text_size_14sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/profitViewRight"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/lessProfitView"
                            android:layout_width="40dip"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/lessProfitImg"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/t_img_less_bg" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/ed_profit"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-0.5dip"
                            android:layout_marginRight="-0.5dip"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="@string/set_profit_point"
                            android:inputType="numberDecimal"
                            android:textColor="@color/app_common_content"
                            android:textColorHint="@color/t_ed_hint"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="@dimen/text_size_15sp"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:id="@+id/addProfitView"
                            android:layout_width="40dip"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/addProfitImg"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/t_img_add_bg" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:gravity="center"
                        android:minWidth="@dimen/t_create_left"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_profitHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_11sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_44dp"
            android:layout_above="@id/btn_order"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip">

            <LinearLayout
                android:id="@+id/line_check_usecasher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--<ImageView-->
                <!--android:id="@+id/check_usecasher"-->
                <!--android:layout_width="@dimen/margin_22dp"-->
                <!--android:layout_height="@dimen/margin_22dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:src="@mipmap/img_choosequan_checked" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_4dp"
                    android:gravity="center_vertical"
                    android:text="余额"
                    android:textColor="@color/app_common_content"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:gravity="center_vertical"
                    android:text="--元"
                    android:textColor="@color/app_common_content"
                    android:textSize="15sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_cashin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:text="充值"
                android:textColor="@color/sub_blue"
                android:textSize="15sp" />

            <!--<LinearLayout-->
            <!--android:id="@+id/line_check_usequan"-->
