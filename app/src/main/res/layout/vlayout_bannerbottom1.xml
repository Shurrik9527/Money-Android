<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_home_newuser_classroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_userstudy_icon"
                android:layout_width="@dimen/margin_40dp"
                android:layout_height="@dimen/margin_40dp"
                android:scaleType="fitXY"
                android:src="@drawable/xinshouxuetang" />

            <TextView
                android:id="@+id/tv_home_userstudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:layout_toRightOf="@+id/img_userstudy_icon"
                android:text="@string/home_userstudy"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/margin_0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rl_home_newuser_gold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_usergold_icon"
                android:layout_width="@dimen/margin_40dp"
                android:layout_height="@dimen/margin_40dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_home_usergold" />

            <TextView
                android:id="@+id/tv_home_usergold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:layout_toRightOf="@+id/img_usergold_icon"
                android:text="盈利榜"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_16sp" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/margin_10dp"
        android:background="@color/color_common_bg" />

</LinearLayout>